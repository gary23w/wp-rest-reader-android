<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#3fc1c9</item>
        <item name="colorPrimaryDark">#212121</item>
        <item name="colorAccent">#757575</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/helvetica</item>
    </style>

    <style name="MockTheme">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>

    </style>

    <style name="nightmode" parent="MockTheme">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="editTextBackground">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="daymode" parent="MockTheme">
        <item name="android:background">@color/white</item>
        <item name="editTextBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>
    <!--    ACTIVITY ANIMATION-->
    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
    <style name="NewsList">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:clipToPadding">false</item>
    </style>
    <!--region News Article -->
    <style name="NewsArticle" />
    <style name="NewsArticle.View">
        <item name="android:layout_marginTop">@dimen/normal_padding</item>
        <item name="android:layout_marginBottom">@dimen/card_elevation</item>
    </style>
    <style name="NewsArticle.Title">
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/textview_size_normal</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="NewsArticle.Image">
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="NewsArticle.Author">
        <item name="android:background">@color/color_transparent</item>
        <item name="android:maxLines">3</item>
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NewsArticle.PublishedAt" parent="MockTheme">
        <item name="android:layout_marginBottom">@dimen/normal_padding</item>
        <item name="android:maxLines">2</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textview_size_small</item>
    </style>

    <style name="ToolBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/colorAccent</item>
        <item name="colorControlNormal">@color/toolbar_color_control_normal</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>
      <!--FONT STYLES-->
    <style name="Regular">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">28sp</item>
        <item name="android:text">sans-serif</item>
    </style>

